<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sensorCreatedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2022-07-19 00:00:00" />

    <TextView
        android:id="@+id/sensorIdInterfaceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sensorCreatedAt"
        android:text="센서 ID : " />

    <TextView
        android:id="@+id/sensorIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/sensorIdInterfaceTextView"
        app:layout_constraintStart_toEndOf="@id/sensorIdInterfaceTextView"
        app:layout_constraintTop_toTopOf="@id/sensorIdInterfaceTextView"
        tools:text="1" />

    <TextView
        android:id="@+id/sensorLocationInterfaceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sensorIdInterfaceTextView"
        android:text="센서 위치 : " />

    <TextView
        android:id="@+id/sensorLocationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/sensorLocationInterfaceTextView"
        app:layout_constraintStart_toEndOf="@id/sensorLocationInterfaceTextView"
        app:layout_constraintTop_toTopOf="@id/sensorLocationInterfaceTextView"
        tools:text="1" />

    <View
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/sensorLocationTextView"
        android:background="@color/black"
        android:layout_width="0dp"
        android:layout_height="2dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
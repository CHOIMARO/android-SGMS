<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/emergencyCallNameInterfaceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="사용자 이름 : " />

    <TextView
        android:id="@+id/emergencyCallNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/emergencyCallNameInterfaceTextView"
        app:layout_constraintStart_toEndOf="@id/emergencyCallNameInterfaceTextView"
        app:layout_constraintTop_toTopOf="@id/emergencyCallNameInterfaceTextView"
        tools:text="최마로" />

    <TextView
        android:id="@+id/emergencyCallNumInterfaceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emergencyCallNameTextView"
        android:text="전화 번호 : " />

    <TextView
        android:id="@+id/emergencyCallNumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/emergencyCallNumInterfaceTextView"
        app:layout_constraintStart_toEndOf="@id/emergencyCallNumInterfaceTextView"
        app:layout_constraintTop_toTopOf="@id/emergencyCallNumInterfaceTextView"
        tools:text="010-1234-1234" />

    <View
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/emergencyCallNumTextView"
        android:background="@color/black"
        android:layout_width="0dp"
        android:layout_height="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>